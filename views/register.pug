doctype html
html(lang='en')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')
		// Search engine optimisatin
		meta(name='description', content='The Amity Android Club')
		meta(name='keywords', content='The Amity Android Club ,The Amity Android Club Website, Amity, Learn Android, Learn Application Development, ASET, Amity University')
		meta(name='author', content='The Amity Android Club')
		// End Search Engine Optimisation
		// Browser tab theme color for Chrome on Android
		meta(name='theme-color', content='#A4C639')
		title Android
		// Site favicon
		link(href='./images/navLogo.png', rel='apple-touch-icon')
		link(href='./images/navLogo.png', rel='shortcut icon')
		// Font Awesome Styles
		script(src='https://use.fontawesome.com/8fda296a12.js')
		// Materialize CSS
		link(href='./css/materialize.min.css', type='text/css', rel='stylesheet')
		// Custom CSS
		link(href='./css/user/main.css', type='text/css', rel='stylesheet')
	body#background-image
		// Header Section
		nav(role='navigation')
			.nav-wrapper.container
				a#logo-container.brand-logo(href='#')
					i.fa.fa-android(aria-hidden='true')
					| Android Club
				ul.right.hide-on-med-and-down
					li
						a.navLinks(href='/') Posts
					li
						a.navLinks(href='/login') Login
				ul#nav-mobile.side-nav
					li
						a(href='/') Posts
					li
						a(href='/login') Login
				a.button-collapse(href='#', data-activates='nav-mobile')
					i.fa.fa-bars(aria-hidden='true')
		// Header Section
		section
			.container
				.row
					.col.s12
						#adminForms.card.hoverable
							#adminFormsTitle Become Administrator
							- if (messages.Error_102)
								.message.Error
									script.
										window.onload = function() {
											Materialize.toast('#{messages.Error_102}', 10000);
										};
							- if (messages.Error_103)
								.message.Error
									script.
										window.onload = function() {
											Materialize.toast('#{messages.Error_103}', 10000);
										};
							- if (messages.Success_101)
								.message.Error
									script.
										window.onload = function() {
											Materialize.toast('#{messages.Success_101}', 10000);
										};
							form(method='post')
								.input-field
									input.validate(name='name', type='text')
									label.active(for='name') Full name
								.input-field
									input.validate(name='handle', type='text')
									label.active(for='handle') Username/Handle
								.input-field
									input.validate(name='password', type='password')
									label.active(for='password') Password
								button.btn.waves-effect.waves-light(type='submit', value='Submit') Submit
// jQuery
script(src='https://code.jquery.com/jquery-3.2.1.min.js')
// Materialize JavaScript
script(src='./js/materialize.min.js')
// Functionality Scripts
script(src='./js/user/init.js')
